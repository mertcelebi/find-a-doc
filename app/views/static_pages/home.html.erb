<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <h3>Past Searches (<%= @feed_items.count %>)</h3>  
        <%= render 'shared/feed' %>
      </section>
    </aside>
    <aside class="span4">
      <section class="center span4 offset1">
          <%= render 'shared/search_form' %>
      </section>
    </aside>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to Find-a-Doc</h1>

    <h2>
      Blah Blah Blah.
    </h2>
    
    <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
  </div>
<% end %>